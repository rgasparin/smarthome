  <body class="hold-transition login-page">
    <div class="login-box">
      <div class="login-logo">
        <a><b>Smart</b>Home</a>
      </div><!-- /.login-logo -->
      <div class="login-box-body">
        <p class="login-box-msg">Portão</p>
        <div class="row">
			<div class="col-xs-12">
			  <button id="abrirFecharPortao" class="btn btn-primary btn-block btn-flat">Abrir/Fechar Portão</button>
			</div><!-- /.col -->
		</div>
    <br>
    <div class="row">
      <div class="col-xs-12">
        <button id="abrirFecharPortaoTimer" class="btn btn-primary btn-block btn-flat">Abrir/Fechar Portão 20 seg</button>
      </div><!-- /.col -->
    </div>
    <hr>
		<div class="row">
			<div class="col-xs-12">
			  <a href="/" class="btn btn-primary btn-block btn-flat">Voltar</a>
