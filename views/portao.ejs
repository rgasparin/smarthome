    <script src="js/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="js/bootstrap.min.js"></script>

    <script>
      $(document).ready(function(){
        $('#abrirFecharPortao').on('click', function(){
          $.get('/portao/abrirFecharPortao', function(data){
            console.log(data);
          });
        });
		
		$('#abrirFecharPortaoTimer').on('click', function(){
          $.get('/portao/abrirFecharPortaoTimer', function(data){
            console.log(data);
